<h1>The Tech Blog</h1>
<section id="currentBlogComment">
  <section class="card">
      <div class="card-body">
      <!-- Title of the current blog post -->
        <h3 class="card-title">{{hbsBlog.title}}</h3> 
        <!-- Information about the author and creation date of the current blog post -->
        <h5>Posted by {{hbsBlog.user.username}} on {{hbsBlog.createdAt}}</h5>
        <p class="card-text">{{hbsBlog.content}}</p>
    </div>
  </section>
 <!-- Start of a loop to display each comment on the current blog post --> 
{{#each hbsBlog.comments}}
  <section class="card">
    <div class="card-body">
      <p>Comment</p>
      <p class="card-text">{{body}}</p>
    </div>
  </section>
  <!-- End of the loop for comments -->
{{/each}}
</section>
<!-- Section to add a new comment for the current blog post -->
<section class="card text-center">
<div class="card-body">
  <h3 class="card-title">Comment</h3>
  <form id="newComment">
    <div class="card-text"></div>
    <!-- Hidden input to store the ID of the current blog post for associating the comment -->
      <input id="hiddenCommentId" hidden="true" value="{{hbsBlog.id}}"></input>
      <textarea id="comment" placeholder="Type your comment here..."></textarea>
    </div>
    <button id="create">Submit</button>
</form>
</div>
</section>

<script src="/js/comment.js"></script>